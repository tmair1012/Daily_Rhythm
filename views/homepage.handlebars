<!-- Log In Section -->
<nav>
  <div class="loginbox">
    <h2>Login</h2>
    <form>
      <input
        type="text"
        name="username"
        placeholder="Email"
        class="username"
      />
      <input
        type="password"
        name="password"
        placeholder="Password"
        class="password"
      />
      <br />
      <input class="submitBtn" type="Submit" name="login" value="Login" />
      <br />
      <a href="#">Forgot Password?</a>
      <br />
      <a href="/signup">Sign Up</a>
    </form>
  </div>
</nav>
<!-- Sign up Section -->
